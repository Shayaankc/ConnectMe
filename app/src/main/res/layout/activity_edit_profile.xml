<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <TextView
        android:id="@+id/eptxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:text="Edit Profile"
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/donetxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:textColor="#4C3E30"
        android:text="Done"
        android:textStyle="bold"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/profilepic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/eptxt"
        android:layout_marginTop="30dp"
        android:src="@drawable/oliviaD" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Olivia Daniel"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/profilepic"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:id="@+id/name2"
        >


        <TextView
            android:id="@+id/name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="#4C3E30"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            android:hint="Olivia Daniel"
            android:background="@drawable/outlined_edittext"
            android:layout_below="@+id/name1"
            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name2"
        android:id="@+id/username2"
        >

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textStyle="bold"
            android:textColor="#4C3E30"
            android:textSize="17sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            android:hint="OliviaD"
            android:background="@drawable/outlined_edittext"
            android:layout_below="@+id/username"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username2"
        android:id="@+id/contact"
        >

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Number"
            android:textColor="#4C3E30"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            android:hint="+42 7412 5443058"
            android:background="@drawable/outlined_edittext"
            android:layout_below="@+id/username"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:text="Bio"
        android:textStyle="bold"
        android:textColor="#4C3E30"
        android:textSize="17sp"
        />
    <TextView
        android:id="@+id/bio1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Just an average 14 year old"
        android:textSize="15sp"
        android:layout_below="@+id/contact"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="130dp"
        android:textColor="#999999"

        />

    <View
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:background="#999999"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/bio1"
        android:layout_marginLeft="125dp"

        />

</RelativeLayout>