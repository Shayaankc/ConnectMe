<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/main">

    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/logo"
        android:background="@color/white"/>

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_below="@id/appLogo"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/subText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We're happy to see you. Please login to continue."
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/welcomeText"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
    />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/subText"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="#FFFFFF"
        android:hint="Username"
        android:minHeight="48dp"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="#FFFFFF"
        android:hint="Password"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot password?"
        android:layout_below="@id/password"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textSize="13sp"/>

    <Button
        android:id="@+id/lbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="@color/white"
        android:layout_below="@id/forgotPassword"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:backgroundTint="#563D27"
        android:elevation="7dp"
        android:stateListAnimator="@null"


        />

    <View
        android:layout_width="300dp"
        android:layout_height="2dp"
        android:background="#000000"
        android:layout_marginTop="22.5dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/lbutton"
        android:layout_centerInParent="true"
        />



    <TextView
        android:id="@+id/continueWith"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or continue with"
        android:layout_below="@id/lbutton"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:textSize="13sp"
        android:layout_centerInParent="true"
        android:background="#EBF2EB"
        />

    <TextView
        android:id="@+id/acc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dont have an account?"
        android:layout_below="@+id/continueWith"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="100dp"
        android:textSize="16dp"

        />


    <ImageView
        android:id="@+id/appleicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/continueWith"
        android:src="@drawable/applelogo"
        android:background="@color/white"/>

    <ImageView
        android:id="@+id/fbicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="35dp"
        android:layout_toRightOf="@+id/appleicon"
        android:layout_below="@+id/continueWith"
        android:src="@drawable/facebooklogo"
        android:background="@color/white"/>

    <ImageView
        android:id="@+id/ggicon"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_marginTop="28dp"
        android:layout_marginRight="35dp"
        android:layout_toLeftOf="@+id/appleicon"
        android:layout_below="@+id/continueWith"
        android:src="@drawable/googlelogo"
        android:background="@color/white"/>

    <TextView
        android:id="@+id/reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_below="@+id/continueWith"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/acc"
        android:textStyle="bold"
        android:textColor="#563D27"
        android:textSize="17dp"

        />



</RelativeLayout>
